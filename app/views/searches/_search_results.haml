.container
  %h5= "Резултати от търсенето: #{@articles.count + @content.count}"

  %p= "(Съдържание: #{@content.count})"
  - @content.each do |content|
    %p= link_to "#{content.title}, / #{l(content.created_at.to_date)}", content
    %hr
  %hr
  = will_paginate @content, page_links: false,
    previous_label: '<- Previous', next_label: 'Next ->',
    renderer: WillPaginate::ActionView::BootstrapLinkRenderer

  %p= "(Заглавия: #{@articles.count})"
  - @articles.each do |article|
    %p= link_to "#{article.title}, / #{l(article.created_at.to_date)}", article
    %hr
  %hr
  = will_paginate @articles, page_links: false,
    previous_label: '<- Назад', next_label: 'Напред ->',
    renderer: WillPaginate::ActionView::BootstrapLinkRenderer
